if [ -z "$1" ]
then
    echo "Please enter a tweet." 
    echo "Example Status Update: tweet "Your tweet here"
    echo "Example Tweet Image : tweet "Your image tweet here" /path/to/your/image.jpg
elif [ -z "$2" ]
then 
